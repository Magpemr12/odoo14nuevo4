<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_l10n_mx_edi_fuel_complement_account_invoice_form_inherit" model="ir.ui.view">
        <field name="name">l10n_mx_edi.fuel.complement.account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='accounting_info_group']" position="after">
                <group string="Fuel Billing" attrs="{'invisible': [('move_type', '=', 'out_refund')]}">
                    <field name="l10n_mx_edi_emitter_reference"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
                <field name="l10n_mx_edi_fuel_partner_id" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']//tree/field[last()]" position="after">
                <field name="l10n_mx_edi_fuel_partner_id" invisible="1" force_save="1"/>
            </xpath>
        </field>
    </record>
</odoo>
