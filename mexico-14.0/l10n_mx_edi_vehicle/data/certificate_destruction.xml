<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="l10n_mx_edi_certificate_destruction" inherit_id="l10n_mx_edi.cfdiv33">
        <xpath expr="//*[name()='cfdi:Comprobante']" position="attributes" t-if="record.l10n_mx_edi_origin">
            <attribute name="t-att-xmlns__destruccion">"http://www.sat.gob.mx/certificadodestruccion" if record.l10n_mx_edi_serie_cd else False</attribute>
        </xpath>
        <xpath expr="*" position="inside">
            <t t-if="record.company_id.l10n_mx_edi_complement_type == 'destruction' and record.l10n_mx_edi_serie_cd">
                <cfdi:Complemento
                    xmlns:cfdi="http://www.sat.gob.mx/cfd/3">
                    <destruccion:certificadodedestruccion
                        xmlns:destruccion="http://www.sat.gob.mx/certificadodestruccion"
                        Version="1.0"
                        t-att-Serie="record.l10n_mx_edi_serie_cd.upper().replace('_', ' ')"
                        t-att-NumFolDesVeh="record.l10n_mx_edi_folio_cd">
                        <t t-set="vehicle" t-value="record.l10n_mx_edi_vehicle_id.sudo()"/>
                        <t t-set="tags" t-value="vehicle.tag_ids.sudo()"/>
                        <destruccion:VehiculoDestruido
                            t-att-Marca="vehicle.model_id.brand_id.name"
                            t-att-TipooClase="tags[0].name if tags else None"
                            t-att-AÃ±o="vehicle.model_year"
                            t-att-Modelo="vehicle.model_id.name"
                            t-att-NIV="vehicle.l10n_mx_edi_niv"
                            t-att-NumSerie="vehicle.vin_sn"
                            t-att-NumPlacas="vehicle.license_plate"
                            t-att-NumMotor="vehicle.l10n_mx_edi_motor"
                            t-att-NumFolTarjCir="vehicle.l10n_mx_edi_circulation_no"/>
                        <t t-if="vehicle.l10n_mx_edi_landing">
                            <destruccion:InformacionAduanera
                                t-att-NumPedImp="vehicle.l10n_mx_edi_landing"
                                t-att-Fecha="vehicle.l10n_mx_edi_landing_date"
                                t-att-Aduana="vehicle.l10n_mx_edi_aduana"/>
                        </t>
                    </destruccion:certificadodedestruccion>
                </cfdi:Complemento>
            </t>
        </xpath>
    </template>
</odoo>
