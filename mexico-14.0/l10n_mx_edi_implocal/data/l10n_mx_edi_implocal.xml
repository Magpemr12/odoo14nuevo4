<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="l10n_mx_edi_implocal" inherit_id="l10n_mx_edi.cfdiv33">
        <xpath expr="//*[local-name()='Conceptos']" position="after">
            <t t-set="transferred_local" t-value="[value for value in record.invoice_line_ids.mapped('tax_ids').filtered(lambda r: r.invoice_repartition_line_ids.filtered(lambda rep: rep.tag_ids and rep.tag_ids[0].name.lower() == 'local') and r.amount &gt;= 0)]"/>
            <t t-set="withholding_local" t-value="[value for value in record.invoice_line_ids.mapped('tax_ids').filtered(lambda r: r.invoice_repartition_line_ids.filtered(lambda rep: rep.tag_ids and rep.tag_ids[0].name.lower() == 'local') and r.amount &lt; 0)]"/>
            <t t-set="total_transferred_local" t-value="sum((value.amount / 100) * float(record.amount_untaxed) for value in transferred_local) or 0.00"/>
            <t t-set="total_withhold_local" t-value="sum((abs(value.amount) / 100) * float(record.amount_untaxed) for value in withholding_local) or 0.00"/>
            <t t-set="total_tax_details_withholding" t-value="total_tax_details_withholding - total_withhold_local"/>
            <t t-set="total_tax_details_transferred" t-value="total_tax_details_transferred - total_transferred_local"/>
            <!-- 'withholding': [value for value in taxes['withholding'] if value['name'].lower() != 'local'] if taxes['withholding'] else taxes['withholding'], 'transferred': [value for value in taxes['transferred'] if value['name'].lower() != 'local'] if taxes['transferred'] else taxes['transferred']}"/> -->
        </xpath>
        <xpath expr="(//*[local-name()='Traslado'])[2]" position="before">
            <t t-set="local_amount_transferred" t-value="sum(abs(value.amount) for value in transferred_local if abs(value.amount) == tax_res['tax_amount']) / 100 * record.amount_untaxed"/>
        </xpath>
        <xpath expr="(//*[local-name()='Traslado'])[2]" position="attributes">
            <attribute name="t-att-Importe">format_float(tax_res['total'] - local_amount_transferred if local_amount_transferred else tax_res['total'], currency_precision)</attribute>
        </xpath>
        <xpath expr="(//*[local-name()='Retencion'])[2]" position="before">
            <t t-set="local_amount_withhold" t-value="sum(abs(value.amount) for value in withholding_local if abs(value.amount) == tax_res['rate']) / 100 * record.amount_untaxed"/>
        </xpath>
        <xpath expr="(//*[local-name()='Retencion'])[2]" position="attributes">
            <attribute name="t-att-Importe">format_float(-(tax_res['total'] - local_amount_withhold) if local_amount_withhold else -tax_res['total'], currency_precision)</attribute>
        </xpath>
        <xpath expr="*" position="inside">
            <t t-if="record.invoice_line_ids.mapped('tax_ids.invoice_repartition_line_ids').filtered(lambda r: r. tag_ids and r.tag_ids[0].name.lower() == 'local')">
                <cfdi:Complemento
                xmlns:cfdi="http://www.sat.gob.mx/cfd/3"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
                    <implocal:ImpuestosLocales
                     xsi:schemaLocation="http://www.sat.gob.mx/implocal http://www.sat.gob.mx/sitio_internet/cfd/implocal/implocal.xsd"
                     xmlns:implocal="http://www.sat.gob.mx/implocal"
                     version="1.0"
                     t-att-TotaldeRetenciones="format_float(total_withhold_local, currency_precision)"
                     t-att-TotaldeTraslados="format_float(total_transferred_local, currency_precision)">
                        <t t-if="transferred_local">
                            <t t-foreach="transferred_local" t-as="tax">
                                <implocal:TrasladosLocales
                                 t-att-ImpLocTrasladado="tax.name"
                                 t-att-TasadeTraslado="format_float(round(abs(tax.amount), 2), 6)"
                                 t-att-Importe="format_float((abs(tax.amount) / 100 * float(record.amount_untaxed)), 2)"
                                />
                            </t>
                        </t>
                        <t t-if="withholding_local">
                            <t t-foreach="withholding_local" t-as="tax">
                                <implocal:RetencionesLocales
                                 t-att-ImpLocRetenido="tax.name"
                                 t-att-TasadeRetencion="format_float(round(abs(tax.amount), 2), 6)"
                                 t-att-Importe="format_float((abs(tax.amount) / 100 * float(record.amount_untaxed)), 2)"
                                />
                            </t>
                        </t>
                    </implocal:ImpuestosLocales>
                </cfdi:Complemento>
            </t>
        </xpath>
        <xpath expr="//*[name()='cfdi:Comprobante']" position="attributes" t-if="record.l10n_mx_edi_origin">
            <attribute name="t-att-xmlns__implocal">"http://www.sat.gob.mx/implocal" if record.invoice_line_ids.mapped('tax_ids.invoice_repartition_line_ids').filtered(lambda r: r. tag_ids and r.tag_ids[0].name.lower() == 'local') else False</attribute>
        </xpath>
    </template>
</odoo>
